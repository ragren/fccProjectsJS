function largestOfFour(arr) {
  function strSort(a, b) {
    return b - a;
  }
  var a1 = arr[0].sort(strSort);
  var a2 = arr[1].sort(strSort);
  var a3 = arr[2].sort(strSort);
  var a4 = arr[3].sort(strSort);
  var answer = [];
  answer.push(a1[0], a2[0], a3[0], a4[0]);
  return answer;
}

largestOfFour([[4, 5, 1, 3], [13, 27, 18, 26], [32, 35, 37, 39], [1000, 1001, 857, 1]]);
